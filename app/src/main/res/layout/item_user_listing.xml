<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:paddingEnd="@dimen/padding_normal_8"
    android:paddingStart="@dimen/padding_normal_8"
    android:paddingRight="@dimen/padding_normal_8"
    android:paddingTop="@dimen/padding_medium_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <TextView
            android:id="@+id/icon_user"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="@dimen/padding_medium_10"
            android:background="@drawable/cicle"
            android:gravity="center"
            android:maxEms="1"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textStyle="bold"

            tools:text="a" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_toEndOf="@+id/icon_user"
            android:textColor="@color/txt_color"
            tools:text="kenneth"

            />

        <TextView
            android:id="@+id/text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_toEndOf="@+id/icon_user"

            android:text="product1" />

        <TextView
            android:id="@+id/fast_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/text_view"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="hey!" />
    </RelativeLayout>


</LinearLayout>