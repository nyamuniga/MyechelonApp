<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <android.support.v7.widget.CardView

            android:layout_width="match_parent" android:layout_height="240dp"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"

            android:paddingBottom="@dimen/padding_extra_large_20"
            app:cardCornerRadius="10dp"
            app:paddingEnd="0dp"
            app:cardBackgroundColor="@color/blue"
            app:cardElevation="8dp"

            >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:orientation="vertical"
            android:id="@+id/image"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="price"
            android:id="@+id/price"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:textSize="18sp"
            android:layout_marginTop="@dimen/padding_medium_10"
            android:orientation="vertical"
            android:layout_below="@+id/image"
            android:layout_marginBottom="45dp"
            android:fontFamily="sans-serif"
            android:textColor="@color/white"


            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="title"
            android:id="@+id/title"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/padding_extra_large_20"
            android:fontFamily="sans-serif"
            android:textSize="15sp"
            android:textColor="@color/txt_color"


            />



</android.support.v7.widget.CardView>


</LinearLayout>
