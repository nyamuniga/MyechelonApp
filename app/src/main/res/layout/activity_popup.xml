<?xml version="1.0" encoding="utf-8"?>

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_margin="10dp"
        app:cardCornerRadius="5dp"
        app:paddingEnd="0dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="5dp"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            >
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/proimage"
                android:src="@drawable/camera"

                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/protitle" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/protitle"
                android:layout_below="@+id/proimage"
                android:layout_marginLeft="@dimen/padding_extra_large_20"
                android:layout_marginRight="@dimen/padding_extra_large_20"
                android:layout_marginTop="@dimen/padding_small_5"
                android:paddingLeft="@dimen/padding_small_5"
                android:hint="product title"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/proprice"
                android:layout_below="@+id/protitle"
                android:layout_marginLeft="@dimen/padding_extra_large_20"
                android:layout_marginRight="@dimen/padding_extra_large_20"
                android:layout_marginTop="@dimen/padding_small_5"
                android:paddingLeft="@dimen/padding_small_5"
                android:hint="product price"
                />


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/post"
                android:layout_centerHorizontal="true"
                android:text="post"
                android:background="@color/blue"
                android:paddingTop="@dimen/padding_medium_10"
                android:paddingBottom="@dimen/padding_medium_10"

                android:textColor="@color/white"
                android:layout_below="@id/proprice"
                android:layout_marginTop="@dimen/padding_extra_large_20"
                />



        </RelativeLayout>
    </android.support.v7.widget.CardView>

